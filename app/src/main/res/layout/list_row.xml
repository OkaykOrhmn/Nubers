<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/backGround"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/layout"
    android:paddingVertical="@dimen/_8cdp"

    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_46cdp"
        android:layout_height="@dimen/_46cdp"
        android:src="@drawable/simcard_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_12cdp"
        android:layout_marginVertical="@dimen/_8cdp"
        app:tint="@color/primaryColor" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/fontForNormalWhite"
        tools:text="شماره سرور 1"
        android:layout_marginHorizontal="@dimen/_12cdp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/price_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/name"
        tools:text="20.000 تومان"
        android:backgroundTint="@color/primaryColor"
        style="@style/fontForNormalWhite"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginHorizontal="@dimen/_24cdp"

        />




</androidx.constraintlayout.widget.ConstraintLayout>