<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_12cdp"
    tools:background="@color/backGround"
    >


        <TextView
            android:id="@+id/title_service"
            style="@style/fontForNormalWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12cdp"
            android:layout_marginRight="@dimen/_18cdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/icon_service"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="تلگرام"
            />

        <ImageView
            android:id="@+id/icon_service"
            android:layout_width="@dimen/_32cdp"
            android:layout_height="@dimen/_32cdp"
            android:layout_marginRight="@dimen/_32cdp"
            android:src="@drawable/hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/secondryColor"
            />




</androidx.constraintlayout.widget.ConstraintLayout>